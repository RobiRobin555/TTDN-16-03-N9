<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="rule_qlvb_document_employee_visibility" model="ir.rule">
        <field name="name">Văn bản theo nhân viên/khách hàng</field>
        <field name="model_id" ref="model_qlvb_document"/>
        <field name="domain_force">['|',('employee_id.user_id','=',user.id),'|',('partner_id.responsible_employee_id.user_id','=',user.id),('partner_id.participant_employee_ids.user_id','=',user.id)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>
    <record id="rule_qlvb_document_manager_visibility" model="ir.rule">
        <field name="name">Văn bản toàn quyền cho Trưởng phòng</field>
        <field name="model_id" ref="model_qlvb_document"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('hr.group_hr_manager'))]"/>
    </record>
</odoo>
