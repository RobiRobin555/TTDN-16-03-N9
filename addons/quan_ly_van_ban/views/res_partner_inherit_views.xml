<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="action_qlvb_open_documents" model="ir.actions.act_window">
        <field name="name">Văn bản</field>
        <field name="res_model">qlvb.document</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'default_partner_id': active_id}</field>
        <field name="domain">[('partner_id', '=', active_id)]</field>
    </record>

    <record id="view_res_partner_form_qlvb_docs" model="ir.ui.view">
        <field name="name">res.partner.form.qlvb.docs</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            
            <div name="button_box" position="inside">
                <button type="action" 
                        name="%(action_qlvb_open_documents)d" 
                        class="oe_stat_button" 
                        icon="fa-file-text-o">
                    <field name="document_count" widget="statinfo" string="Văn bản"/>
                </button>
            </div>

            <xpath expr="//sheet/notebook" position="inside">
                <page string="Hồ sơ số hóa">
                    <field name="document_ids" mode="tree,kanban">
                        <tree>
                            <field name="name"/>
                            <field name="document_type"/>
                            <field name="employee_id"/>
                            <field name="upload_date"/>
                            <field name="expiry_date"/>
                            <field name="state" widget="badge" decoration-success="state == 'approved'"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>