<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_chung_chi_tree" model="ir.ui.view">
            <field name="name">chung.chi.tree</field>
            <field name="model">nhan_su.chung_chi</field>
            <field name="arch" type="xml">
                <tree string="Chứng chỉ">
                    <field name="nhan_vien_id" string="Nhân viên"/>
                    <field name="name" string="Tên chứng chỉ"/>
                    <field name="don_vi_cap" string="Đơn vị cấp"/>
                    <field name="ngay_cap" string="Ngày cấp"/>
                    <field name="ngay_het_han" string="Ngày hết hạn"/>
                </tree>
            </field>
        </record>
        <record id="view_chung_chi_form" model="ir.ui.view">
            <field name="name">chung.chi.form</field>
            <field name="model">nhan_su.chung_chi</field>
            <field name="arch" type="xml">
                <form string="Chứng chỉ">
                    <sheet>
                        <group>
                            <field name="nhan_vien_id" string="Nhân viên"/>
                            <field name="name" string="Tên chứng chỉ"/>
                            <field name="don_vi_cap" string="Đơn vị cấp"/>
                            <field name="ngay_cap" string="Ngày cấp"/>
                            <field name="ngay_het_han" string="Ngày hết hạn"/>
                            <field name="tep" string="Tệp chứng chỉ"/>
                            <field name="mo_ta" string="Mô tả"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="action_chung_chi" model="ir.actions.act_window">
            <field name="name">Chứng chỉ</field>
            <field name="res_model">nhan_su.chung_chi</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>