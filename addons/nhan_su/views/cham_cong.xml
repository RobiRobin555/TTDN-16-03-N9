<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_cham_cong_tree" model="ir.ui.view">
            <field name="name">cham.cong.tree</field>
            <field name="model">nhan_su.cham_cong</field>
            <field name="arch" type="xml">
                <tree string="Chấm công">
                    <field name="nhan_vien_id" string="Nhân viên"/>
                    <field name="ngay" string="Ngày"/>
                    <field name="gio_vao" string="Giờ vào"/>
                    <field name="gio_ra" string="Giờ ra"/>
                    <field name="so_gio_lam_viec" string="Số giờ làm việc"/>
                </tree>
            </field>
        </record>
        <record id="view_cham_cong_form" model="ir.ui.view">
            <field name="name">cham.cong.form</field>
            <field name="model">nhan_su.cham_cong</field>
            <field name="arch" type="xml">
                <form string="Chấm công">
                    <sheet>
                        <group>
                            <field name="nhan_vien_id" string="Nhân viên"/>
                            <field name="ngay" string="Ngày"/>
                            <field name="gio_vao" string="Giờ vào"/>
                            <field name="gio_ra" string="Giờ ra"/>
                            <field name="so_gio_lam_viec" string="Số giờ làm việc"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="action_cham_cong" model="ir.actions.act_window">
            <field name="name">Chấm công</field>
            <field name="res_model">nhan_su.cham_cong</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>